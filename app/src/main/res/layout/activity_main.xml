<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resize"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_306sdp"
            android:layout_height="@dimen/_445sdp"
            android:background="@drawable/panel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginBottom="4dp">

        <TextView
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="@dimen/_30sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

        <TextView
                android:text="Enter your username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintBottom_toTopOf="@+id/usernameid"
                app:layout_constraintVertical_bias="0.343" />

        <TextView
                android:text="Enter your password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView212"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.193"
                app:layout_constraintBottom_toTopOf="@+id/passwordid"
                android:layout_marginBottom="16dp" />

        <EditText
                android:layout_width="290dp"
                android:layout_height="53dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:background="@drawable/textfields"
                android:ems="10"
                android:textColorHint="@color/black"
                android:id="@+id/usernameid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView212"
                android:layout_marginBottom="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.322"
                android:hint="Username" />

        <EditText
                android:layout_width="290dp"
                android:layout_height="53dp"
                android:inputType="textPassword"
                android:ems="10"
                android:textColor="@color/black"
                android:background="@drawable/textfields"
                android:id="@+id/passwordid"
                android:hint="@string/password"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/switch1"
                android:layout_marginBottom="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.322" />

        <Button
                android:text="Login"
                android:layout_width="215dp"
                android:layout_height="65dp"
                android:id="@+id/loginbutton"
                android:textColor="@color/white"
                android:background="#4056F4"
                android:drawableStart="@drawable/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="36dp" />

        <Switch
                android:text="turn on to see the password"
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:id="@+id/switch1"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintBottom_toTopOf="@+id/loginbutton"
                android:layout_marginBottom="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.254" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
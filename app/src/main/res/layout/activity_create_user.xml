<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- This LinearLayout represents the contents of the screen  -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- The main content view where your UI (buttons, textviews) will be placed -->

        <FrameLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#470FF4">

                <TextView
                        android:text="Add User"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView31"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_35sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintHorizontal_bias="0.497" />

                <TextView
                        android:text="Enter your credentials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView31"
                        android:layout_marginTop="@dimen/_15sdp" />

                <TextView
                        android:text="Username"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/textView4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.268"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        android:layout_marginTop="@dimen/_15sdp" />

                <TextView
                        android:text="Password"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/textView5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.316"
                        app:layout_constraintTop_toBottomOf="@+id/usernamefield"
                        android:layout_marginTop="@dimen/_15sdp" />

                <TextView
                        android:text="Select a role"
                        android:layout_width="180dp"
                        android:layout_height="25dp"
                        android:id="@+id/textView6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.216"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox"
                        android:layout_marginTop="12dp" />

                <EditText
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_43sdp"
                        android:hint="Enter your Password"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/passwordfield"
                        android:background="@drawable/textfields"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        android:layout_marginTop="24dp" />

                <EditText
                        android:layout_width="@dimen/_230sdp"
                        android:layout_height="@dimen/_43sdp"
                        android:inputType="text"
                        android:hint="Enter your Username"
                        android:text=""
                        android:background="@drawable/textfields"
                        android:ems="10"
                        android:id="@+id/usernamefield"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                <Button
                        android:text="Add user"
                        android:layout_width="139dp"
                        android:layout_height="49dp"
                        android:drawableLeft="@drawable/adduser"
                        android:id="@+id/buttonadd"
                        android:background="@drawable/button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_48sdp"
                        android:layout_marginBottom="@dimen/_32sdp"
                        app:layout_constraintTop_toBottomOf="@+id/spinner"
                        app:layout_constraintVertical_bias="1.0" />

                <Button
                        android:text="Go back"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button"
                        android:id="@+id/buttonback"
                        app:layout_constraintStart_toEndOf="@+id/buttonadd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.505"
                        android:layout_marginBottom="@dimen/_32sdp"
                        app:layout_constraintTop_toBottomOf="@+id/spinner"
                        app:layout_constraintVertical_bias="1.0" />

                <CheckBox
                        android:text="Check to see the password"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:textColor="@color/white"
                        android:id="@+id/checkBox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.48"
                        app:layout_constraintTop_toBottomOf="@+id/passwordfield"
                        android:layout_marginTop="@dimen/_16sdp" />

                <Spinner
                        android:layout_width="301dp"
                        android:layout_height="52dp"
                        android:background="@drawable/textfields"
                        android:id="@+id/spinner"
                        android:tooltipText="Select your role"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintHorizontal_bias="0.454" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/blue"
            app:itemTextColor="@color/white"
            app:menu="@menu/navigationbar"
            app:itemIconTint="@null"
            app:headerLayout="@drawable/username"
            />

</androidx.drawerlayout.widget.DrawerLayout>